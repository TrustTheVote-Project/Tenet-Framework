= form_for [ :group_admin, @user ], html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :email, class: 'col-md-2 control-label'
    .col-md-4
      = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :first_name, class: 'col-md-2 control-label'
    .col-md-4
      = f.text_field :first_name, class: 'form-control'
  .form-group
    = f.label :last_name, class: 'col-md-2 control-label'
    .col-md-4
      = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :phone, class: 'col-md-2 control-label'
    .col-md-4
      = f.text_field :phone, class: 'form-control'

  - if @user.persisted?
    .form-group
      = f.label :password, class: 'col-md-2 control-label'
      .col-md-4
        = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation, 'Again', class: 'col-md-2 control-label'
      .col-md-4
        = f.password_field :password_confirmation, class: 'form-control'

  - roles = CsfConfig['user_roles']
  - unless roles.blank?
    .form-group
      = f.label :role, class: 'col-md-2 control-label'
      .col-md-4
        = f.select :role, roles, { prompt: 'Pick role' }, class: 'form-control'

  .form-group
    .col-md-offset-2.col-md-4
      = f.submit class: 'btn btn-default'
