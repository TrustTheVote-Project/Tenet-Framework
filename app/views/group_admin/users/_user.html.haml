%tr
  %td.login= user.login
  %td.email= mail_to user.email
  %td.name=  user.full_name
  %td.phone= user.phone
  %td.role=  user.role
  %td.actions
    - if user.suspended?
      = link_to 'Unsuspend', [ :unsuspend_group_admin, user ], class: 'btn btn-xs btn-success', method: 'post'
      = link_to 'Delete', [ :group_admin, user ], class: 'btn btn-xs btn-danger', method: 'delete', data: { confirm: t('sure_to_delete') }
    - else
      = link_to 'Edit', [ :edit_group_admin, user ], class: 'btn btn-xs btn-default'
      = link_to 'Suspend', [ :suspend_group_admin, user ], class: 'btn btn-xs btn-success', method: 'post'
