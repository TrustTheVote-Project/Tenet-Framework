%tr
  %td.joined= account.created_at.strftime("%d %b, %H:%m")
  %td.name=   link_to account.name, admin_admin_group_path(account)
  %td.state=  account.state.name
  %td.users=  account.users.users_only.count
  %td.actions
    - if account.suspended?
      = link_to "Unsuspend", unsuspend_admin_admin_group_path(account), method: 'post', class: 'btn btn-xs btn-success'
      = link_to "Delete",    admin_admin_group_path(account), method: 'delete', class: 'btn btn-xs btn-danger', data: { confirm: t("sure_to_delete") }
    - else
      = link_to "View",      admin_admin_group_path(account), class: 'btn btn-xs btn-default'
      = link_to "Suspend",   suspend_admin_admin_group_path(account), method: 'post', class: 'btn btn-xs btn-success'
