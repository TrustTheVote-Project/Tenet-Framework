- @page_id = "aa_rr_show"
- @navbar_item = :requests

= page_head

.row
  .col-md-6
    %table.table.properties
      %tr
        %th Organization
        %td= @req.organization_name
      %tr
        %th State
        %td= @req.state
      %tr
        %th Website
        %td= link_to @req.website
      %tr
        %th Admin name
        %td= @req.admin_name
      %tr
        %th Admin title
        %td= @req.admin_title
      %tr
        %th Admin email
        %td= mail_to @req.admin_email
      %tr
        %th Admin phone
        %td= @req.admin_phone

.row
  .col-md-6
    = link_to "Back to Requests", :back
    - if @req.rejected?
      &nbsp;&nbsp;
      = link_to "Reopen Request", [ :reopen_admin_admin, @req ], method: 'post', class: 'btn btn-success'
      &nbsp;&nbsp;
      = link_to "Delete Request", [ :admin_admin, @req ], class: 'btn btn-danger', method: 'delete', data: { confirm: t('sure_to_delete') }
    - else
      &nbsp;&nbsp;
      = link_to "Reject Request", [ :reject_admin_admin, @req ], method: 'post', class: 'btn btn-success'
      &nbsp;&nbsp;
      = link_to "Process Request", new_admin_admin_group_path(request: @req.id), class: 'btn btn-primary'
