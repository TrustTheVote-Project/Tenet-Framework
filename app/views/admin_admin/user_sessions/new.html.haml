- @page_id = 'login'

= page_head

.row
  .col-md-12
    %p.body= raw t ".body"

.row
  .col-md-6.col-md-offset-3
    = form_for :user_session, url: :admin_admin_login, html: { role: 'form' } do |f|
      .form-group
        = f.label :login, t(".form.login")
        = f.text_field :login, class: "form-control", placeholder: "john.smith"
      .form-group
        = f.label :password, t(".form.password")
        = f.password_field :password, class: "form-control"

      .form-group
        = f.submit t(".form.submit"), class: "btn btn-default"
